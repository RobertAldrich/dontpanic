@{
    ViewBag.Title = "Calculator1";
}

<form name="Calculator">
    <table>
        <tr>
            <!--OUTER MARGIN OF CALCULATOR-->
            <td colspan="2" align="left">

                <b>
                    <font face="Arial" color="#000080" size="3">
                        Austere Calc! 2000<br>
                    </font>
                    <font face="Arial" size="5">
                        <input type="text" size="10" name="NumField" onchange="FixCurrent()">
                    </font>
                </b>

            </td>
        </tr>
        <tr>
            <td>
                <!--numbers-->

                <table>
                    <tr>
                        <td><input type="button" name="seven" value="7" onclick="AddNum('7')"></td>
                        <td><input type="button" name="eight" value="8" onclick="AddNum('8')"></td>
                        <td><input type="button" name="nine" value="9" onclick="AddNum('9')"></td>
                    </tr>
                    <tr>
                        <td><input type="button" name="four" value="4" onclick="AddNum('4')"></td>
                        <td><input type="button" name="five" value="5" onclick="AddNum('5')"></td>
                        <td><input type="button" name="six" value="6" onclick="AddNum('6')"></td>
                    </tr>
                    <tr>
                        <td><input type="button" name="one" value="1" onclick="AddNum('1')"></td>
                        <td><input type="button" name="two" value="2" onclick="AddNum('2')"></td>
                        <td><input type="button" name="three" value="3" onclick="AddNum('3')"></td>
                    </tr>
                    <tr>
                        <td><input type="button" name="zero" value="0" onclick="AddNum('0')"></td>
                        <td><input type="button" name="two" value="." onclick="dcml()"></td>
                    </tr>
                </table>
            </td>
            <td align="left">
                <!--ops-->

                <table>
                    <tr>
                    </tr>
                    <tr>
                        <td><input type="button" name="mul" value="*" onclick="MathOp('*')"></td>
                        <td><input type="button" name="div" value="/" onclick="MathOp('/')"></td>
                    </tr>
                    <tr>
                        <td><input type="button" name="add" value="+" onclick="MathOp('+')"></td>
                        <td><input type="button" name="sub" value="-" onclick="MathOp('-')"></td>
                    </tr>
                    <tr>
                        <td><input type="button" name="eqls" value="=" onclick="Calc()"></td>
                        <td><input type="button" name="clear" value="C" onclick="Clear()"></td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</form>
</div>
